<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="97dp"
    android:background="@drawable/background_silver_light_corner">

    <ImageView
        android:id="@+id/icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_margin="16dp"
        android:tintMode="src_in"
        tools:src="@android:drawable/btn_star_big_on" />

    <Space
        android:id="@+id/spacesplit"
        android:layout_width="1dp"
        android:layout_height="1dp"
        android:layout_centerInParent="true" />

    <TextView
        android:id="@+id/description"
        android:textSize="14sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_toRightOf="@id/icon"
        android:layout_toLeftOf="@id/spacesplit"
        android:layout_alignBottom="@id/icon"
        android:textAppearance="?android:attr/textAppearanceLarge"
        tools:text="Whatever Module" />

    <Spinner
        android:id="@+id/spinner_backoff"
        android:layout_toRightOf="@id/spacesplit"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:drawSelectorOnTop="true"
        android:minHeight="40dp" />


    <!---->
</RelativeLayout>



