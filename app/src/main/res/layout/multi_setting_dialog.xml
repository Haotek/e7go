<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/setting_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/e7go_video_function_bg_color"
    android:gravity="center">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1">

            <c.min.tseng.ui.SquareImageView
                android:id="@+id/videomode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/videomodet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/videomode"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/e7go_black"
                android:textSize="14sp"
                tools:text="Whatever Module" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <c.min.tseng.ui.SquareImageView
                android:id="@+id/timelapsemode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/timelapsemodet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/timelapsemode"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/e7go_black"
                android:textSize="14sp"
                tools:text="Whatever Module" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <c.min.tseng.ui.SquareImageView
                android:id="@+id/photomode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:src="@android:drawable/btn_star_big_on" />

            <TextView
                android:id="@+id/photomodet"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/photomode"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:textColor="@color/e7go_black"
                android:textSize="14sp"
                tools:text="Whatever Module" />
        </RelativeLayout>
    </LinearLayout>

